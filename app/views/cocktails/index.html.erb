<!-- BANNER -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url('banner_home.jpg') %>);">
  <div class="banner-content">
    <h1>Trop chaud pour un Mojito</h1>
    <p>Tous vos cocktails préférés réunis au même endoit</p>
  </div>
</div>

<div class="wraper"></div>

<div class="container">
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <%= link_to edit_cocktail_path(cocktail) do %>
          <i class="fas fa-edit"></i>
        <% end %>
        |
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <hr>
  <%= link_to 'Add a cocktail', new_cocktail_path %>
</div>
