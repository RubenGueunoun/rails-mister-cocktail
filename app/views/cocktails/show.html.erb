<!-- BANNER COCKTAIL -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_url("#{@cocktail.id}.jpg") %>);">
  <div class="banner-content">
    <h1 style="font-weight: 200; letter-spacing: 5px"><%= @cocktail.name %></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="box-ingredient">
        <h3>Ingredients</h3>
        <ul>
          <% @doses.each do |dose| %>
            <li>
              <h4><%= dose.ingredient.name %></h4>
              <p><%= dose.description %> | <%= link_to 'Delete Ingredient', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </li>
          <% end %>
        </ul>
        <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="box-ingredient">
        <p>ICI LE FORMULAIRE</p>
      </div>
    </div>
  </div>

  <!-- OPTION LINKS -->
  <div class="options">
    <%= link_to 'Back to list', cocktails_path, class: "btn-gris-sobre" %>
    <%= link_to 'Edit', edit_cocktail_path(@cocktail), class: "btn-gris-sobre" %>
    <%= link_to 'Delete', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-gris-sobre" %>
  </div>
</div>
